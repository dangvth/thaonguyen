@{ 
    var list = (List<PetStoreWebClient.ModelClass.CartItem>)ViewBag.ListItem;
    int sumItem = 0;
    if (list != null)
    {
        sumItem = list.Count;
    }
}
<div class="cart">
    <p>
        Welcome to our Online Wild Pet Store! <span>Cart:</span><div id="dd" class="wrapper-dropdown-2">
            @sumItem item(s) - $0.00
            <ul class="dropdown">
                <li>you have no items in your Shopping cart</li>
            </ul>
        </div>
    </p>
</div>
